<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:textColor="#de000000"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Алла, Санкт-Петербург, 29 лет" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_name"
        android:layout_marginEnd="19dp" />

    <TextView
        android:id="@+id/tv_date_vacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/iv_avatar"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="#de000000"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Могу поехать:
10 сентября - 10 октября 2017" />

    <TextView
        android:id="@+id/tv_place_to_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_vacation"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="#de000000"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Куда: Европа" />

    <TextView
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:background="?attr/selectableItemBackground"
        android:textStyle="normal"
        android:textColor="#000000"
        android:letterSpacing="0.04"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:drawablePadding="16dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_place_to_go"
        tools:text="Отправить сообщение"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_message_gray_24dp"
        android:layout_toEndOf="@+id/iv_avatar"
        />

</RelativeLayout>